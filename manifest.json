{
  "manifest_version": 3,
  "name": "Redgifs Bulk Downloader",
  "version": "1.0.1",
  "description": "Adds checkboxes to tiles and bulk downloads selected items as <id>.mp4",
  "permissions": ["downloads"],
  "host_permissions": ["https://www.redgifs.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.redgifs.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["mp4worker.js"],
      "matches": ["https://www.redgifs.com/*"]
    }
  ]
}